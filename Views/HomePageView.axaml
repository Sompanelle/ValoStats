<UserControl
    x:Class="ValoStats.Views.HomePageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ValoStats.ViewModels"
    d:DesignHeight="550"
    d:DesignWidth="800"
    x:DataType="vm:HomePageViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:HomePageViewModel />
    </Design.DataContext>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinitions>Auto,*,Auto</RowDefinitions>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinitions>*,*</ColumnDefinitions>
        </Grid.ColumnDefinitions>

        
        <!--  Page Name + Last Updated StackPanel  -->
        <DockPanel
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="5">

            <StackPanel Orientation="Horizontal">
                <Label Classes="PageTitle" Content="Home" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                <Label Content="Last Updated:" />
                <Label Content="{Binding UpdatedAt}" />

            </StackPanel>
        </DockPanel>
        
        <!--  Left Side  -->
        
        
        <Image Source="{Binding CardImage}"
               Grid.Row="1"
               Grid.Column="0"/>
        
        
        <!--  Player Display Name + Title StackPanel  -->
        <StackPanel Grid.Row="2"
                    Grid.Column="0"
                    Margin="5">


            <StackPanel>
                <Label Content="{Binding ConcatName}" Classes="Header"/>
            </StackPanel>
            
            <StackPanel>
                
                <StackPanel HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    
                    <StackPanel>
                        <Label Content="Current Rank:"
                               Classes="SubHeader"/>
                        <Label Content="{Binding MmrData.current.tier.name}"
                               Classes="SubHeader"/>
                    </StackPanel>
                    
                    
                    <StackPanel>
                        <Label Content="RR:"
                               Classes="SubHeader"/>
                        <Label Content="{Binding MmrData.current.rr}"
                               Classes="SubHeader"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <Label Content="Level:" Classes="SubHeader" />
                        <Label Content="{Binding Level}" Classes="SubHeader" />
                    </StackPanel>
                    
                </StackPanel>
                
                <StackPanel HorizontalAlignment="Center">
                    <Label Content="Peak:"/>
                    <Label Content="{Binding MmrData.peak.tier.name}"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>


        <!--  Right Side  -->




        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Spacing="15">

            
            
            <Label Classes="Header1" Content="Last Ten Matches" />

            <Grid />

            <Border Classes="Radius">
                <ListBox ItemsSource="{Binding Matches}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                
                                <Label Content="{Binding Mode}" Classes="ListHeader" />
                                <Label Content="{Binding Map}" Classes="ListSubHeader"/>
                                <Label Content="{Binding Agent}" Classes="ListText"/>
                                <Label Content="{Binding KD}" Classes="ListText"/>

                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            
            
        </StackPanel>

    </Grid>
</UserControl>
